<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dreamworld.demotest.ServiceActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Called using Imlicit Intent "
        android:gravity="center"

        />


    <Button
        android:id="@+id/sStartService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start service "
        />

    <Button
        android:id="@+id/sStopService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop service "
        />


    <Button
        android:id="@+id/sBoundService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bound service "
        />
    <Button
        android:id="@+id/sunBoundService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UNbound service "
        />
    <Button
        android:id="@+id/sget_rbdom_no_Service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="get random no  "
        />




</LinearLayout>
