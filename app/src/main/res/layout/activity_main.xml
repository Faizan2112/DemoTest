<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <Button
        android:id="@+id/hIntent"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Intent Example"/>
    <Button
        android:id="@+id/hSevice"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Service Example"/>
    <Button
        android:id="@+id/hBroadcast"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="BroadCast Example"/>
    <Button
        android:id="@+id/hContent"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Content Provider Example"/>

    <Button
        android:id="@+id/hLoaders"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Loaders  Example"/>

</LinearLayout>
